package com.restapi.hello;

import javax.ws.rs.GET;
import javax.ws.rs.Path;
import javax.ws.rs.PathParam;
import javax.ws.rs.Produces;
import javax.ws.rs.core.MediaType;

@Path("students")
public class StudentResource {
	
	
	@GET
	@Produces(MediaType.APPLICATION_XML)
	public void here() throws Exception {
		System.out.println("here....");
	}
	
	@GET
	@Path("students/{roll}")
	@Produces(MediaType.APPLICATION_XML)
	public float getStudent(@PathParam("roll") String roll) throws Exception {
		System.out.println(roll);
		JDBCConnection db = new JDBCConnection();
		db.connect();
		Student s = db.getDetails(roll);
		if(s==null) {
			System.out.println("Student not found");
			return 0;
		}
		db.closeConnection();
		System.out.println(s.getTotalMarks());
		return s.getTotalMarks();
	}
	
	
	
}
